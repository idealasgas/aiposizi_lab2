<div class="container">
  <h1>Edit student</h1>

  <% flash[:errors]&.each do |error| %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% end %>


  <%= form_with(model: @student, local: true) do |form| %>
    <p>
      <%= form.label 'Name' %><br>
      <%= form.text_field :name %>
    </p>

    <p>
      <%= form.label 'Surname' %><br>
      <%= form.text_field :surname %>
    </p>

    <p>
      <%= form.label 'Group' %><br>
      <%= form.text_field :group_name, :value => @student.group.name %>
    </p>

    <p>
      <%= form.submit 'Change' %>
    </p>
  <% end %>
</div>
