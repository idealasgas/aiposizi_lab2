<div class="container">
  <h1>Edit group</h1>

  <% flash[:errors]&.each do |error| %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% end %>


  <%= form_with(model: @group, local: true) do |form| %>
    <p>
      <%= form.label 'Name' %><br>
      <%= form.text_field :name %>
    </p>

    <p>
      <%= form.label 'Teacher' %><br>
      <%= form.select :teacher_id, @selection, { include_blank: true }, :value => @group&.teacher&.name %>
    </p>

    <p>
      <%= form.submit 'Change' %>
    </p>
  <% end %>
